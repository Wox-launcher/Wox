<Window x:Class="Wox.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Wox.UI.Windows.ViewModels"
        xmlns:v="clr-namespace:Wox.UI.Windows.Views"
        mc:Ignorable="d"
        Title="Wox"
        Height="{Binding WindowHeight}"
        Width="{Binding WindowWidth}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Deactivated="Window_Deactivated"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewKeyUp="Window_PreviewKeyUp"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Background="{DynamicResource AppBackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource ControlStrongStrokeColorDefaultBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Opacity="0.5"
                              BlurRadius="20"
                              ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Search Box -->
            <Border Grid.Row="0"
                    Padding="{DynamicResource AppPadding}"
                    Background="{DynamicResource AppBackgroundBrush}">
                <Border Background="{DynamicResource QueryBoxBackgroundBrush}"
                        CornerRadius="{DynamicResource QueryBoxCornerRadius}"
                        Padding="12,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox
                            Grid.Column="0"
                            x:Name="QueryTextBox"
                            Text="{Binding QueryText, UpdateSourceTrigger=PropertyChanged}"
                            FontSize="20"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="{DynamicResource QueryBoxFontBrush}"
                            CaretBrush="{DynamicResource QueryBoxCursorBrush}"
                            SelectionBrush="{DynamicResource QueryBoxSelectionBackgroundBrush}"
                            SelectionTextBrush="{DynamicResource QueryBoxSelectionForegroundBrush}"
                            AcceptsReturn="True"
                            MaxLines="3"
                            VerticalScrollBarVisibility="Auto"
                            PreviewKeyDown="QueryTextBox_PreviewKeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  Focusable="false"
                                                                  HorizontalScrollBarVisibility="Hidden"
                                                                  VerticalScrollBarVisibility="Hidden"/>
                                                    <TextBlock Text="è¾“å…¥æŸ¥è¯¢..."
                                                               Foreground="{DynamicResource QueryBoxPlaceholderBrush}"
                                                               IsHitTestVisible="False"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                 Value="">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- Query Icon -->
                        <Border Grid.Column="1"
                                Width="40"
                                Height="40"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                MouseLeftButtonUp="QueryIcon_MouseLeftButtonUp">
                            <Image Width="30"
                                   Height="30"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Source="{Binding QueryIcon, Converter={StaticResource WoxImageToImageSourceConverter}}">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding QueryIcon}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Border>
                    </Grid>
                </Border>
            </Border>

            <!-- Body: Results and Preview -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Results List -->
                <v:GridView Grid.Column="0"
                            x:Name="ResultsGridView"
                            Visibility="{Binding IsGridLayout, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <ListView Grid.Column="0"
                          x:Name="ResultsListView"
                          Visibility="{Binding IsGridLayout, Converter={StaticResource BooleanToVisibilityInverseConverter}}"
                          Padding="{DynamicResource ResultContainerPadding}"
                          ItemsSource="{Binding Results}"
                          SelectedIndex="{Binding SelectedIndex}"
                          SelectedItem="{Binding SelectedResult}"
                          BorderThickness="0"
                          Background="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          SelectionMode="Single"
                          PreviewMouseLeftButtonUp="ResultsListView_PreviewMouseLeftButtonUp">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch"/>
                            <Setter Property="Padding"
                                    Value="{DynamicResource ResultItemPadding}"/>
                            <Setter Property="Margin"
                                    Value="4,2"/>
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="BorderThickness"
                                    Value="{DynamicResource ResultItemBorderThickness}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="{DynamicResource ResultItemCornerRadius}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{DynamicResource ResultItemHoverBackgroundBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{DynamicResource ResultItemActiveBackgroundBrush}"/>
                                                <Setter Property="BorderThickness"
                                                        Value="{DynamicResource ResultItemActiveBorderThickness}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Image Grid.Column="0"
                                       Width="32"
                                       Height="32"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       Source="{Binding Icon, Converter={StaticResource WoxImageToImageSourceConverter}}">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Icon}"
                                                             Value="{x:Null}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!-- Fallback Icon when no icon available -->
                                <Border Grid.Column="0"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        Background="{DynamicResource ResultItemIconBackgroundBrush}"
                                        CornerRadius="4">
                                    <TextBlock Text="ðŸ“„"
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Icon}"
                                                             Value="{x:Null}">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- Title and Subtitle -->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource ResultItemTitleBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="{DynamicResource ResultItemActiveTitleBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding SubTitle}"
                                               FontSize="13"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource ResultItemSubTitleBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"
                                                                 Value="True">
                                                        <Setter Property="Foreground"
                                                                Value="{DynamicResource ResultItemActiveSubTitleBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Preview Panel -->
                <Border Grid.Column="1"
                        Width="{Binding PreviewWidth}"
                        BorderThickness="1,0,0,0"
                        BorderBrush="{DynamicResource PreviewSplitLineBrush}"
                        Background="{DynamicResource PreviewBackgroundBrush}"
                        Visibility="{Binding IsPreviewVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <!-- Text/Markdown Preview -->
                        <ScrollViewer x:Name="PreviewScrollViewer" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding PreviewContent}"
                                       Padding="16"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{DynamicResource PreviewFontBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PreviewType}" Value="image">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </ScrollViewer>

                        <!-- Image Preview -->
                        <Image Source="{Binding PreviewImagePath}"
                               Stretch="Uniform"
                               Margin="8">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PreviewType}" Value="image">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer: Toolbar -->
            <Border Grid.Row="2"
                    Height="40"
                    Padding="{DynamicResource ToolbarPadding}"
                    Background="{DynamicResource ToolbarBackgroundBrush}"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{DynamicResource PreviewSplitLineBrush}"
                    Visibility="{Binding IsToolbarVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    HorizontalAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="11"
                               Foreground="{DynamicResource ToolbarFontBrush}"
                               Opacity="0.7">
                        <Run Text="{Binding Results.Count, Mode=OneWay}"/>
                        <Run Text=" ä¸ªç»“æžœ"/>
                    </TextBlock>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <TextBlock Text="æ‰“å¼€"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="{DynamicResource ToolbarFontBrush}"
                                   Margin="0,0,6,0"/>
                        <Border Background="Transparent"
                                BorderBrush="{DynamicResource ToolbarFontBrush}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="6,2">
                            <TextBlock Text="Enter"
                                       FontSize="10"
                                       Foreground="{DynamicResource ToolbarFontBrush}"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Action Panel (Existing logic handles this differently, maybe overlapping?) -->
             
            <!-- Form Action Panel Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2"
                  Visibility="{Binding IsFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Background="#80000000"> <!-- Semi-transparent background -->
                <Border Background="{DynamicResource WindowBackground}" 
                        CornerRadius="8" 
                        Width="400" 
                        MaxHeight="500"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Padding="0"
                        Effect="{StaticResource DropShadowEffect}">
                    <v:FormView DataContext="{Binding FormViewModel}"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
