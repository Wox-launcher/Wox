<Window x:Class="Wox.UI.Windows.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wox UI Test Window"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Test Controls -->
        <Border Grid.Column="0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                Padding="12">
            <StackPanel>
                <TextBlock Text="UI Tests"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,16"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Button Content="Sample Results"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="LoadSampleResults_Click"/>

                <Button Content="Long Text"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="LoadLongTextResults_Click"/>

                <Button Content="Icon Results"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="LoadIconResults_Click"/>

                <Button Content="Preview Results"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="LoadPreviewResults_Click"/>

                <Button Content="Clear Results"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="ClearResults_Click"/>

                <Separator Margin="0,16"/>

                <TextBlock Text="Theme Test"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,16,0,8"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Button Content="Dark Theme"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="DarkTheme_Click"/>

                <Button Content="Light Theme"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="LightTheme_Click"/>

                <Separator Margin="0,16"/>

                <TextBlock Text="Window Test"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,16,0,8"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <Button Content="Show Main Window"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="ShowMainWindow_Click"/>

                <Button Content="Hide Main Window"
                        Margin="0,0,0,8"
                        Padding="12,8"
                        Click="HideMainWindow_Click"/>
            </StackPanel>
        </Border>

        <!-- Preview Area -->
        <Border Grid.Column="1"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Preview: This is how the main window will look"
                           FontSize="14"
                           Opacity="0.7"
                           Margin="0,0,0,12"/>

                <!-- Embedded Main Window Preview -->
                <Border Grid.Row="1"
                        Background="{DynamicResource ApplicationBackgroundBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource ControlStrongStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                Opacity="0.3"
                                BlurRadius="10"
                                ShadowDepth="0"/>
                    </Border.Effect>

                    <Grid x:Name="PreviewGrid">
                        <!-- Will host MainWindow content -->
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
